@using DeliveryCRM;
@using DeliveryCRM.Entities;


@model IEnumerable<DeliveryCRM.Entities.DriverEntity>

@{
    ViewData["Title"] = "Назначить водителя";
}

<div class="text-center">
    <h1 class="display-4">Назначить водителя</h1>
</div>


<form action="~/Manager/AssignDriver" method="post">
    <div class="container">
        <table class="table">
            <h>Выберите водителя для заказа #@ViewBag.OrderId</h>
            <thead>
                <tr>
                    <th scope="col">#ID Водителя</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Машина</th>
                    <th scope="col">Тип авто</th>
                    <th scope="col">Опыт работы</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DriverEntity item in Model)
                {
                    
                    <tr>
                        <td><input type="hidden"name="driverId" value="@item.Id"/> @item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Car.Model</td>
                        <td>@item.Car.typeCargo.CategoryCargo</td>
                        <td>@item.Experience</td>
                        <td>@item.Email</td>
                        <!--<td> <a href="~/Manager/AssignDriver?orderId=@ViewBag.OrderId&driverId=@item.Id">Назначить</a> </td>-->
                        <td><input type="hidden"name="orderId" value="@ViewBag.OrderId"/> 
                            <button type="submit">Назначить</button> </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</form>